  "license": "MIT",
  "source": "./src/index.html",
  "scripts": {
    "clean": "rimraf ./dist",
    "docker-compose": "npm i --force && echo \"Running in docker-compose... You should run interactively by attaching:\n\t\tdocker exec -it `hostname` npm run dev\" && tail -f /dev/null",
    "build": "npm run clean && NODE_ENV=production node ./build.mjs",
    "start": "node ./app",
    "dev": "NODE_ENV=development concurrently -r 'npm:dev-concurrently*'",
    "dev-concurrently:mkdir": "mkdir -p dist",
    "dev-concurrently:watch": "npm run clean && node ./build.mjs",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@mantine/core": "^3.6.11",
    "@mantine/hooks": "^3.6.11",
    "@mantine/modals": "^3.6.11",
    "@mantine/notifications": "^3.6.11",
    "react": "^17.0.2",
    "react-base-table": "^1.13.0",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "socket.io-client": "^4.4.1",
    "zustand": "^3.7.0"
  },
  "devDependencies": {
    "@chialab/esbuild-plugin-env": "^0.15.0-alpha.1",
    "@chialab/esbuild-plugin-html": "^0.15.0-alpha.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.23",
    "esbuild-plugin-sass": "^1.0.1",
    "golden-hammer-shared": "bitbucket:nerdfoundrygaming/golden-hammer-shared",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "alias": {
    "-": "./src"
  }
}
